<div class="container">
  <%= form_tag(create_booking_path(@period.id)) do -%>
    <center class="row">
      <center class="col s12">
      <div class="radio_wrap" style="display: inline-block;">
        <p>
          <input name="group1" type="radio" id="test1" />
          <label for="test1">Two Week Training Cycle - $500</label>
        </p>
        <p>
          <input name="group1" type="radio" id="test2" />
          <label for="test2">One Month Training Cycle - $1000</label>
        </p>
        <p>
          <input name="group1" type="radio" id="test3"  />
          <label for="test3">Three Month Training Cycle - $3000</label>
        </p>
      </div>
      </center>
        <div class="input-field col s6">
          <input  id="first_name" type="text" class="validate">
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s6">
          <input id="last_name" type="text" class="validate">
          <label for="last_name">Last Name</label>
        </div>
        <br>
        <div class="input-field col s6">
          <input  id="address" type="text" class="validate">
          <label for="address">Street Address</label>
        </div>
        <div class="input-field col s3">
          <input  id="city_name" type="text" class="validate">
          <label for="city">City</label>
        </div>
        <div class="input-field col s3">
          <input id="state" type="text" class="validate">
          <label for="state_name">State/Province</label>
        </div>
        <div class="input-field col s6">
          <input id="address2" type="text" class="validate">
          <label for="address_two">Street Address Line Two</label>
        </div>
        <div class="input-field col s3">
           <input  id="postal_code" type="text" class="validate">
          <label for="postal_code">Postal Code</label>
        </div>
        <div class="input-field col s3">
           <input  id="country" type="text" class="validate">
          <label for="country">Country</label>
        </div>
        <br>
        <div class="input-field col s6">
           <input id="credit_card_number "type="text" class="validate"></input>
          <label for="credit_card_number">CC Number</label>
        </div>
        <div class="input-field col s3">
         <input id="expiration_date" type="text" class="validate">
          <label for="expiration_date">Expiration Date</label>
        </div>
        <div class="input-field col s3">
         <input id="expiration_date" type="text" class="validate">
          <label for="expiration_date">CVN</label>
        </div>
      <button class='btn waves-effect waves-light' id="save_btn">BOOK IT!</button>
    </center>
  <% end -%>
</div> 










